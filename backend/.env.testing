# DanaVision Testing Environment
# This file is used by Pest/PHPUnit for running tests

APP_NAME=DanaVision
APP_ENV=testing
APP_KEY=base64:testing1234567890123456789012345678901234=
APP_DEBUG=true
APP_URL=http://localhost

# Use in-memory SQLite for fast tests
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Queue runs synchronously in tests
QUEUE_CONNECTION=sync

# Disable caching during tests
CACHE_STORE=array

# Use array session driver
SESSION_DRIVER=array

# Use array mail driver
MAIL_MAILER=array

# Timezone
TZ=America/Chicago
SCHEDULE_TIMEZONE=America/Chicago

# Bcrypt rounds (lower for faster tests)
BCRYPT_ROUNDS=4
