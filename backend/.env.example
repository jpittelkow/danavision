# DanaVision Environment Configuration
# Copy this file to .env and fill in the values

# Application Configuration
APP_NAME=DanaVision
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080

# Generate APP_KEY with:
# docker run --rm php:8.3-cli php -r "echo 'base64:' . base64_encode(random_bytes(32)) . PHP_EOL;"

# Timezone
TZ=America/Chicago
SCHEDULE_TIMEZONE=America/Chicago

# Database Configuration
# For local development/CI: database/database.sqlite
# For Docker container: /var/www/html/data/database.sqlite
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Optional: AI Provider Keys (user-specific keys can also be configured in Settings)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=
SERPAPI_KEY=
RAINFOREST_KEY=

# Mail (optional - for price alerts)
MAIL_MAILER=log
MAIL_FROM_ADDRESS=hello@danavision.app
MAIL_FROM_NAME=DanaVision

# Session/Cache
SESSION_DRIVER=file
CACHE_STORE=file
QUEUE_CONNECTION=sync

# Sanctum (for API authentication)
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8080,127.0.0.1,127.0.0.1:8080

# Database initialization safety (set to true only for first-time setup)
ALLOW_DB_INIT=false
