# DanaVision Environment Configuration
# Copy this file to .env and fill in the values

# Application Configuration
APP_NAME=DanaVision
APP_KEY=
APP_URL=http://localhost:8080
APP_ENV=local
APP_DEBUG=true

# Generate APP_KEY with:
# docker run --rm php:8.3-cli php -r "echo 'base64:' . base64_encode(random_bytes(32)) . PHP_EOL;"

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/data/database.sqlite

# Timezone
TZ=America/Chicago
SCHEDULE_TIMEZONE=America/Chicago

# Optional: API Keys (these can also be configured via the Settings page in the app)
# These are optional defaults - users can configure their own API keys in the application
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# GEMINI_API_KEY=
# SERPAPI_KEY=
# RAINFOREST_KEY=

# Optional: Email Configuration (for price alerts)
# MAIL_DRIVER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_FROM_ADDRESS=noreply@danavision.app
# MAIL_FROM_NAME=DanaVision
# MAIL_ENCRYPTION=tls
